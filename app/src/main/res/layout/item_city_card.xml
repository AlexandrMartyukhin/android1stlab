<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="@dimen/card_margin_left_right"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin_left_right"
        android:layout_marginBottom="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageViewCardTown"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="fill"
                android:minHeight="@dimen/cardItemMinHeight"
                android:scaleType="centerCrop"
                android:src="@drawable/msk"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewCityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:padding="5dp"
                android:text="@string/def_town"
                android:textSize="24dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>